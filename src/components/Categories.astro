---
import '../css/Categories.css';
import { categories } from "../data/api.json";
import { Image, Picture } from '@astrojs/image/components';

interface Props { 
    title: string,
}

const { title } = Astro.props;
---

<div class="categories">
    <div class="container">
        <div class="title">
            <hr> <h2>{title}</h2> <hr>
        </div>
        <div class="categories_wrap">
            { 
                categories.map(category => (
                    <div class="category">
                        <Image src={category.image} width={100} height={100} alt={category.name} />
                        <h3>{category.name}</h3>
                    </div>
                    
                ))
            }
        </div>
    </div>

</div>